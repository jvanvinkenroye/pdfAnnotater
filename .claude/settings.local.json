{
  "permissions": {
    "allow": [
      "Bash(git init:*)",
      "Bash(git config:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(uv venv:*)",
      "Bash(source .venv/bin/activate)",
      "Bash(uv pip install:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)"
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  }
}
